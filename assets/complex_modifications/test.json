    {
      "description": "モード切り替え",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "no_insert_mode",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "no_insert_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
