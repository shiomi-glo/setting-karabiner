{
  "title": "半角の時のみ -_ 入れ替え",
  "rules": [
    {
      "description": "Exchange hyphen and underscore",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "hyphen",
              "modifiers": [
                "left_shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [{ "language": "en" }]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "hyphen",
            "modifiers": {
              "mandatory": [
                "shift"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "hyphen"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [{ "language": "en" }]
            }
          ]
        }
      ]
    }
  ]
}
