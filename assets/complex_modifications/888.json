{
  "title": "編集モード関連",
  "rules": [
    {
      "description": "モード切り替え",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "no_insert_mode",
                "value": 1
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "no_insert_mode",
              "value": 0
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "set_variable": {
                "name": "no_insert_mode",
                "value": 0
              }
            }
          ],
          "conditions": [
            {
              "type": "variable_if",
              "name": "no_insert_mode",
              "value": 1
            }
          ]
        }
      ]
    },



    {
      "description": "数字キーは原則として記号として使用する。",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "1"
          },
          "to": [
            {
              "key_code": "1",
              "modifiers": [
                "left_shift"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
              "key_code": "1",
              "modifiers": {
                "mandatory": [
                  "shift"
                ],
                "optional": [
                  "caps_lock"
                ]
              }
            }
          ,
          "to": {
            "key_code": "1"
          }
        },
      ]
    }
  ]
}